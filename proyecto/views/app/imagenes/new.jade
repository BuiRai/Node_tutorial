
// Extiende del layout
extends ../../layout

// block "contenido", el "contenido" es como se declaro
// en el layout.
block contenido
	div(class="col-md-6 remove-float center-block big-top-space")
		h1 Subir nueva imagen
		form(action="/sessions" method="POST")
			div(class="form-group")
				label(for="title") Título
				input(type="text" name="title" placeholder="Título de la imagen" id="title" class="form-control")
			div(class="form-group")
				label(for="file") Imagen
				input(type="file" name="file" id="file" class="form-control")

			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit" value="Subir imagen" class="btn btn-success")