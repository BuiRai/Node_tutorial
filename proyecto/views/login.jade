
// Extiende del layout
extends ./layout.jade

// block "contenido", el "contenido" es como se declaro
// en el layout.
block contenido
	div(class="col-md-6 remove-float center-block big-top-space")
		form(action="/sessions" method="POST")
			div(class="form-group")
				label(for="email") Email
				input(type="email" name="user_email" placeholder="example@example.com" id="email" class="form-control")
			div(class="form-group")
				label(for="password") Contraseña
				input(type="password" name="user_password" placeholder="password" id="password" class="form-control")

			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit" value="Iniciar sesión" class="btn btn-success")
				div(class="col-xs-12 col-sm-6 text-right")
					a(href="/signup" class="text-success") No tengo cuenta